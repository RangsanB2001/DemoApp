@model IEnumerable<AuthenticationModels.GetDataUser>

@{
    ViewData["Title"] = "Data";
    Layout = "_LayoutLoginSuccess";
}
<div class="container">
    <div class="col-lg-12">
        <h1 style="color:red;" class="text-center">ข้อมูล</h1>
        <table class="table table-responsive-sm table-hover">
            <thead>
                <tr>
                    <th>รหัส</th>
                    <th>username</th>
                    <th>จัดการ</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var Data in Model)
                    {
                        <tr>
                            <td>@Data.iduser</td>
                            <td>@Data.username</td>
                            <td>
                                <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@Data.iduser">ลบ</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-danger">Data Not Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

