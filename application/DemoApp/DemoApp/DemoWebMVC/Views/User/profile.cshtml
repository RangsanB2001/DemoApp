@model AuthenticationModels.GetDataUser

@{
    ViewData["Title"] = "Profile";
    Layout = "_LayoutLoginSuccess";
}

<section style="background-color:#eee">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <form asp-controller="User" asp-action="UpdateProfileUser">
                            <div class="row">
                                <div class="col-md-12">
                                    <input class="form-control" type="hidden" name="userId" value="@Model.userId" />
                                </div>
                                <div class="col-md-6">
                                    <label class="text-danger">Username</label>
                                    <input class="form-control" type="text" name="userName" value="@Model.userName" />
                                </div>
                                <div class="col-md-6">
                                    <label class="text-danger">Password</label>
                                    <input class="form-control" type="password" name="password" value="@Model.password" />
                                </div>
                                <div class="form-group mt-2">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
